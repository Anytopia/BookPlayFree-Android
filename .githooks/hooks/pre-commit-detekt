#!/bin/bash

echo "ğŸ” Running Detekt..."
./gradlew detekt

if [ $? -ne 0 ]; then
  echo "âŒ Detekt failed. Fix issues before committing."
  exit 1
fi

echo "âœ… Detekt passed."
git add .

# Print heading
echo "Running unit tests..."

# Run only unit tests (no device required)
./gradlew testDebugUnitTest --quiet

# Capture exit code
TEST_RESULT=$?

if [ $TEST_RESULT -ne 0 ]; then
  echo "âŒ Unit tests failed. Commit aborted."
  exit 1
else
  echo "âœ… All unit tests passed."
fi